///link list
int link [4],listt[4],start,ptr=-1;

int main()
{
    listt[0] = 3,listt[1] = 8,listt[2] = 7,listt[3] = 4;
    link[0] = 3,link[1] = 0,link[2] = 1,link[3] = -1;
    start = 2;
    ptr = start;
    for(;;)
    {

        cout<<listt[ptr]<<endl;
             if( link[ptr] == -1) break;
        ptr= link[ptr];
    }

}
